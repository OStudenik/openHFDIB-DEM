FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

gravity
{
    type            buoyancyForce;
    active          true;
    selectionMode   all;         // or cellZone, cellSet, points
    fields          (U);         // Name of velocity field
    rho             rho;         // Name of density field
    g               (9.81 0 0); // Load g value from constant/g
}
